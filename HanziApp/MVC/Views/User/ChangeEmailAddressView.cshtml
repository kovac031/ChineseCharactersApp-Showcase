<style>

    .main-div {
        display: flex;
        flex-direction: row;
    }

        .sub-div-left {
            width: 30%;
            padding-right: 50px;
            text-align: right;
        }

        .sub-div-center {
            display: flex;
            flex-direction: column;
            width: 40%;
            font-size: 20px;
            font-family: Calibri;
            text-align: justify;
        }

        .sub-div-right {
            width: 30%;
            padding-left: 50px;
            text-align: left;
        }

    .buttons {
        background-color: #f2f2f2;
        color: #333;
        padding: 4px 8px;
        font-size: 18px;
        border: 1px solid #ccc;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .buttons:hover {
            background-color: #dcdcdc;
            color: #333; /* New background color on hover */
        }
</style>

<div class="main-div">
    <div>
        <a class="buttons" href="@Url.Action("ShowProfilePage", "ProfilePage")">Back to your profile page</a>
    </div>
</div>

<div class="main-div">

    <div class="sub-div-left"></div>

    <div class="sub-div-center">
        <h2>You are editing your email address</h2>
        <form asp-action="EditEmailAddress" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <input type="hidden" asp-for="User.Password" />
            <input type="hidden" asp-for="User.Username" />

            <div style="padding-bottom: 15px;" class="form-group">
                <label>New email address: </label>
                <input asp-for="Strings.StringOne" class="form-control" />
            </div>

            <div>Confirm password twice:</div>
            <div style="padding-bottom: 15px;" class="form-group">
                <input asp-for="Strings.StringTwo" class="form-control" type="password" />
            </div>
            <div style="padding-bottom: 15px;" class="form-group">
                <input asp-for="Strings.StringThree" class="form-control" type="password" />
            </div>

            <div style="padding-bottom: 15px;" class="form-group">
                <input type="submit" value="Save" class="btn btn-primary buttons" />
            </div>
        </form>
    </div>

    <div class="sub-div-right"></div>
</div>

@if (TempData["FailureMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["FailureMessage"]
    </div>
}